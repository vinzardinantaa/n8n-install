# Animated progress bar
show_progress_bar() {
    local current=$1
    local total=$2
    local task=$3
    local width=40
    
    if [ $total -eq 0 ]; then
        total=1
    fi
    
    local percentage=$((current * 100 / total))
    local filled=$((current * width / total))
    local empty=$((width - filled))
    
    # Build progress bar
    printf "\r  "
    printf "${CYAN}[${NC}"
    
    # Filled part
    if [ $filled -gt 0 ]; then
        printf "${GREEN}"
        printf "%${filled}s" | tr ' ' 'â–ˆ'
    fi
    
    # Empty part
    if [ $empty -gt 0 ]; then
        printf "${GRAY}"
        printf "%${empty}s" | tr ' ' 'â–‘'
    fi
    
    printf "${NC}${CYAN}]${NC} "
    printf "%3d%% " $percentage
    
    # Task description
    if [ -n "$task" ]; then
        printf "${WHITE}%s${NC}" "$task"
    fi
    
    # Add newline if complete
    if [ $percentage -eq 100 ]; then
        echo ""
    fi
}

# Animated spinner
show_spinner() {
    local pid=$1
    local task=$2
    local spin='â ‹â ™â ¹â ¸â ¼â ´â ¦â §â ‡â '
    local i=0
    
    while kill -0 $pid 2>/dev/null; do
        i=$(( (i+1) % ${#spin} ))
        printf "\r  ${CYAN}[${spin:$i:1}]${NC} %s" "$task"
        sleep 0.1
    done
    
    wait $pid
    local result=$?
    
    if [ $result -eq 0 ]; then
        printf "\r  ${GREEN}[${CHECK}]${NC} %s\n" "$task"
    else
        printf "\r  ${RED}[${CROSS}]${NC} %s\n" "$task"
    fi
    
    return $result
}

