# Check root
check_root() {
    if [[ $EUID -ne 0 ]]; then
        echo -e "${RED}This script must be run as root${NC}"
        echo -e "${YELLOW}Please run: sudo $0${NC}"
        exit 1
    fi
}

# Main execution
main() {
    check_root
    detect_os
    show_main_menu
}

# Start the script
main "$@"
