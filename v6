check_status() {
    load_config
    print_header
    echo -e "${WHITE}${BOLD}N8N SERVICE STATUS${NC}"
    echo -e "${GRAY}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${NC}"
    echo ""
    
    local status=$(check_n8n_status)
    echo -e "  Status: $(
        case $status in
            running) echo -e "${GREEN}â— Running${NC}" ;;
            stopped) echo -e "${YELLOW}â— Stopped${NC}" ;;
            *) echo -e "${RED}â— Not Found${NC}" ;;
        esac
    )"
    
    echo -e "  Method: ${CYAN}$INSTALL_METHOD${NC}"
    echo -e "  Port: ${CYAN}$N8N_PORT${NC}"
    echo -e "  URL: ${CYAN}http://$(hostname -I | awk '{print $1}'):${N8N_PORT}${NC}"
    
    echo ""
    read -p "Press Enter to continue..."
}

