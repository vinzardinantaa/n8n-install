port_management() {
    print_header
    echo -e "${WHITE}${BOLD}PORT MANAGEMENT${NC}"
    echo -e "${GRAY}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${NC}"
    echo ""
    
    echo -e "  Open ports:"
    ss -tuln | grep LISTEN | awk '{print $5}' | sed 's/.*://' | sort -n | uniq | while read port; do
        echo -e "    ${CYAN}$port${NC}"
    done
    
    echo ""
    read -p "Press Enter to continue..."
}

